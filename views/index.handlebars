<div class="container">
  <div class="center">
    <h1 class=" btn-primary">Burgerlicious!</h1>
  <img  class="burgerImage" src="https://nerdist.com/wp-content/uploads/2018/08/bk-cheese-8152018-970-by-545.jpg" alt="error in upload">  </p>
  </div>
  

  <div class="row">
    
    <div class="col-sm-6">
      <h3 >Burgers Available</h3>
      
    
      <ul>
        {{#each burger }}
        {{#unless this.devoured}}

        <li>
          {{this.id}} <span></span>
          {{this.burger_name}}


          <div>
            <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit" class="available_Burger">Eat me</button>
            </form>
            <br>
          </div>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-6">
      <h3>Burgers that are eaten</h3>

      {{#each burger}}
      {{#if this.devoured}}

      <p>
        {{this.id}}
        {{this.burger_name}}

      </p>
      {{/if}}
      {{/each}}

    </div>

  </div>






<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">Add burger</button>
</form>
</div>