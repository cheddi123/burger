<header class="fixed-top text-center">
  <h1 class=" btn-primary">Burgerlicious!</h1>
</header>

<div class="container">
  <div class="center">

    <img class="burgerImage" src="https://nerdist.com/wp-content/uploads/2018/08/bk-cheese-8152018-970-by-545.jpg" alt="error in upload">
    </p>
  </div>


  <div class="row">

    <div class="col-sm-6">
      <h3>Burgers Available</h3>

    <span style="word-spacing:10px">

   
      <ul>
        {{#each burgers }}
        {{#unless this.devoured}}

        <li><strong>
            {{this.id}}. 
            {{this.burger_name}}

            <div>
              <button type="submit" class="eatme btn-success" data-id="{{id}}">Eat me</button>
            </div>
            <hr>
          </strong>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
       </span>
      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="addBurger"><strong>Burger Name:</strong> </label>
          <input type="text" class="input-group-text" id="addBurger" name="burger">
        </div>
        <button type="submit" class="btn-info">Add burger</button>
      </form>


    </div>

    <div class="col-sm-6">
      <h3>Burgers that are eaten</h3>
 <span class="strikethrough" style="word-spacing :10px">
      {{#each burgers}}
      {{#if this.devoured}}

     
        <p><strong>
            {{this.id}}.
            {{this.burger_name}}
          </strong>
     
      <div>
        <button type="submit" class="delete btn-danger" data-id="{{id}}"> delete <span >  </span>  </button>
      </div>
      <hr>
      </p>
      {{/if}}
      {{/each}}
 </span>
    </div>

  </div>



</div>